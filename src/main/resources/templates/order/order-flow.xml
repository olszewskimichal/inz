<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="
      	http://www.springframework.org/schema/webflow
      	http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="order" class="com.inz.praca.dto.OrderDTO"/>

    <on-start>
        <evaluate expression="orderService.addCartToOrder()" result="flowScope.order" />
    </on-start>



    <view-state id="collectCustomerInfo" model="order">
        <binder>
            <binding property="shippingDetail.houseNum"/>
            <binding property="shippingDetail.street"/>
            <binding property="shippingDetail.city"/>
            <binding property="shippingDetail.postCode"/>
            <binding property="shippingDetail.phoneNumber"/>
        </binder>
        <on-render>
            <render fragments="body" />
        </on-render>
        <transition on="customerInfoCollected" to="orderConfirmation"/>
    </view-state>

    <view-state id="orderConfirmation" model="order">
        <on-render>
            <render fragments="body" />
        </on-render>
        <transition on="orderConfirmed" to="processOrder"/>
        <transition on="backToCollectShippingDetail" to="collectCustomerInfo"/>
    </view-state>

    <action-state id="processOrder" >
        <evaluate expression="orderService.saveOrder(order)"
                  />
        <transition to="thankCustomer"/>
    </action-state>

    <view-state id="thankCustomer" model="order">
        <transition to="endState"/>
    </view-state>

    <end-state id="endState"/>

    <global-transitions>
        <transition on="cancel" to="endState"/>
    </global-transitions>

</flow>